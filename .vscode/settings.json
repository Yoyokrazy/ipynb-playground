{
	// WORKSPACE SETTINGS.JSON
	//
	// files settings ================================================
	"files.insertFinalNewline": true,
	// "files.trimFinalNewlines": true,
	// "files.trimTrailingWhitespace": true,
	// language specific =============================================
	"[python]": {},
	// editor settings ===============================================
	"editor.codeActionWidget.showHeaders": true,
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixall": "explicit",
	},
	// scm settings ==================================================
	"scm.experimental.showSyncView": true,
	// notebook settings =============================================
	"notebook.codeActionsOnSave": {
		"notebook.cleanImports": "explicit",
	},
	"notebook.formatOnCellExecution": true,
	"notebook.output.textLineLimit": 50,
	"notebook.cellToolbarVisibility": "hover",
	"notebook.revealNextOnExecuteBehavior": "firstLine",
	"ipynb.pasteImagesAsAttachments.enabled": true,
	// notebook layout ===============================================
	// "notebook.insertToolbarLocation": "hidden",
	"notebook.stickyScroll.enabled": true,
	// "notebook.cellToolbarLocation": {
	// "default": "hidden"
	// },
	// release notes =================================================
	// "window.zoomLevel": 1,
	// "editor.fontSize": 14,
	// "editor.wordWrap": "on",
	// testing
	// "remote.SSH.force32bitWindows": true
}
